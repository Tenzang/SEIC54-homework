<h2>Edit mountain</h2>

<form action="<%= mountain_path(@mountain.id) %>" method="post">
    <label> 
        Name:
        <input name="name" required value="<%= @mountain.name %>">
    </label>

        <label> 
        Image:
        <input type="url" name="image" value="<%= @mountain.image %>">
    </label>

        <label> 
        Country:
        <input type="name" name="country" value="<%= @mountain.country %>">
    </label>

        <label> 
        Height:
        <input type="number" name="height" value="<%= @mountain.height %>">
    </label>

        <label> 
        Deaths:
        <input type="number" name="deaths" value="<%= @mountain.deaths %>">
    </label>

<button>Update Mountain</button>
</form>