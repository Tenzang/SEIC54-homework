<h1>New Mountain</h1>

<form action="<%= mountains_path %>" method="post">
    <label> 
        Name:
        <input name="name" required>
    </label>

    <label> 
        Image:
        <input type="url" name="image">
    </label>

    <label> 
        Country:
        <input type="name" name="country">
    </label>

    <label> 
        Height:
        <input type="number" name="height">
    </label>

    <label> 
        Deaths:
        <input type="number" name="deaths">
    </label>

<button>Create mountain</button>
</form>