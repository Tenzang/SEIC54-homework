<h1>
    <%= @player.name %>
</h1>

<%= image_tag @player.image, :class => 'feature' %>

<% if @player.team.present? %>
    <p>Team: <%= link_to @player.team.name, @player.team %></p>
<% end %>
<p>Nationality: <%= @player.nationality %></p>
<p>Date of Birth: <%= @player.dob.strftime '%e %B, %Y' unless @player.dob.nil? %></p>
<p>Height: <%= @player.height %></p>
<p>Weight: <%= @player.weight %> kg</p>
<p>Position: <%= @player.position %></p>

<div class="controls">
    <%= link_to 'Edit player', edit_player_path(@player) %>
    <%= link_to 'Delete player', @player, :method => 'delete', :data => { :confirm => 'Are you sure?' } %>
</div>