<%= form_for @player do |f| %>
    <%= f.label :name, :required => true %>
    <%= f.text_field :name %>
    <%= f.label :nationality %>
    <%= f.text_field :nationality %>
    <%= f.label :dob, 'Date of birth' %>
    <%= f.text_field :dob, :placeholder => 'YYYY-MM-DD' %>
    <%= f.label :height %>
    <%= f.text_field :height %>
    <%= f.label :weight %>
    <%= f.number_field :weight %>
    <%= f.label :position %>
    <%= f.text_field :position %>
    <%= f.label :image %>
    <%= f.url_field :image %>

    <%= f.label :team_id %>
    <%= f.select :team_id, Team.pluck(:name, :id), :include_blank => true %>

    <%= f.submit %>
<% end %>