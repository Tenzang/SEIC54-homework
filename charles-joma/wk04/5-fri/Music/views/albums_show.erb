<h1>
    <%= @albums.name %>
</h1>

<h2>
    Author: <%= @albums.author %>
</h2>

<% unless @albums.image.nil? || @albums.image.empty? %>
    <img class="feature" src="<%= @albums.image %>" alt="<%= @albums.name %>">
<% end %>

<div class="controls">
    <a href="/albums/<%= @albums.id%>/edit"> Edit Album </a>
    |
    <a href="/albums/<%= @albums.id%>/delete"> Delete Album </a>
</div>

